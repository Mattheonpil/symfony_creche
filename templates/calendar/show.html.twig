{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <h1>Calendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ calendar.date ? calendar.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ calendar.day }}</td>
            </tr>
            <tr>
                <th>Week</th>
                <td>{{ calendar.week }}</td>
            </tr>
            <tr>
                <th>Is_weekend</th>
                <td>{{ calendar.isWeekend ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_closed</th>
                <td>{{ calendar.isClosed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Closure_justification</th>
                <td>{{ calendar.closureJustification }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_calendar_index') }}">back to list</a>

    <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}">edit</a>

    {{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
