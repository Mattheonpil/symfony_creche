{% extends 'base.html.twig' %}

{% block title %}Inscription d'un enfant{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 class="text-center mb-4">Inscription nouvel enfant</h1>

        {{ form_start(form) }}
            <div class="form-section">
                <h2>Informations responsables</h2>
                {{ form_widget(form.user) }}
            </div>

            <div class="form-section">
                <h2>Informations sur les accompagnateurs</h2>
                {{ form_widget(form.recovery) }}
            </div>

            <div class="form-section">
                <h2>Informations sur l'enfant</h2>
                {{ form_widget(form.child) }}
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Valider l'inscription</button>
            </div>
        {{ form_end(form) }}
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            this.querySelector('button[type="submit"]').disabled = true;
        });
    </script>
{% endblock %}
