{% extends 'base.html.twig' %}

{% block title %}Ajouter un responsable légal{% endblock %}

{% block body %}
    <div class="form-wrapper">
        <h1>Ajouter un responsable légal</h1>

        <form method="post" class="edit-form">
            <div class="form-section form-style-general ">
                <div class="form-group">
                    <label for="recovery_name">Nom</label>
                    <input type="text" id="recovery_name" name="recovery_child_form[recovery][name]" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="recovery_first_name">Prénom</label>
                    <input type="text" id="recovery_first_name" name="recovery_child_form[recovery][first_name]" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="recovery_email">Email</label>
                    <input type="email" id="recovery_email" name="recovery_child_form[recovery][email]" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="recovery_phone">Téléphone</label>
                    <input type="text" id="recovery_phone" name="recovery_child_form[recovery][phone]" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="recovery_child_relation">Lien avec l'enfant</label>
                    <select id="recovery_child_relation" name="recovery_child_form[relation]" class="form-control">
                        <option value="père">Père</option>
                        <option value="mère">Mère</option>
                        <option value="grand-parent">Grand-parent</option>
                        <option value="autre">Autre</option>
                    </select>
                </div>
                <input type="hidden" name="recovery_child_form[_token]" value="{{ csrf_token('recovery_child_form') }}">
            </div>
            <div class="button-group">
                <button type="submit" class="form-button form-button--submit">Enregistrer</button>
                <a href="{{ path('app_inscription_show', {'childId': child.id}) }}" class="form-button form-button--cancel">Annuler</a>
            </div>
        </form>
    </div>
{% endblock %} 