{% extends 'base.html.twig' %}

{% block title %}Child index{% endblock %}

{% block body %}
    <h1>Child index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>First_name</th>
                <th>Birth_date</th>
                <th>Genre</th>
                <th>Registration_date</th>
                <th>Unsubscription_date</th>
                <th>Allergy</th>
                <th>Medical_specificity</th>
                <th>Lundi_a</th>
                <th>Lundi_d</th>
                <th>Mardi_a</th>
                <th>Mardi_d</th>
                <th>Mercredi_a</th>
                <th>Mercredi_d</th>
                <th>Jeudi_a</th>
                <th>Jeudi_d</th>
                <th>Vendredi_a</th>
                <th>Vendredi_d</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for child in children %}
            <tr>
                <td>{{ child.id }}</td>
                <td>{{ child.name }}</td>
                
                <td>{{ child.firstName }}</td>
                <td>{{ child.birthDate ? child.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ child.genre }}</td>
                <td>{{ child.registrationDate ? child.registrationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ child.unsubscriptionDate ? child.unsubscriptionDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ child.allergy }}</td>
                <td>{{ child.medicalSpecificity }}</td>
                <td>{{ child.lundiA ? child.lundiA|date('H:i:s') : '' }}</td>
                <td>{{ child.lundiD ? child.lundiD|date('H:i:s') : '' }}</td>
                <td>{{ child.mardiA ? child.mardiA|date('H:i:s') : '' }}</td>
                <td>{{ child.mardiD ? child.mardiD|date('H:i:s') : '' }}</td>
                <td>{{ child.mercrediA ? child.mercrediA|date('H:i:s') : '' }}</td>
                <td>{{ child.mercrediD ? child.mercrediD|date('H:i:s') : '' }}</td>
                <td>{{ child.jeudiA ? child.jeudiA|date('H:i:s') : '' }}</td>
                <td>{{ child.jeudiD ? child.jeudiD|date('H:i:s') : '' }}</td>
                <td>{{ child.vendrediA ? child.vendrediA|date('H:i:s') : '' }}</td>
                <td>{{ child.vendrediD ? child.vendrediD|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_child_show', {'id': child.id}) }}">show</a>
                    <a href="{{ path('app_child_edit', {'id': child.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_child_new') }}">Create new</a>
{% endblock %}
